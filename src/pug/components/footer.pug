footer.footer
    div.footer__wrap.container
        div.footer__information
            article.footer__description
                h3.footer__title.title.title-light Say
                    span.title.title-bold  Hello
                p.footer__paragraph Don’t be shy, drop us an email and say hello! We are a really nice
                    |  bunch of people :)
            div.footer__contact
                ul.contact
                    li.contact__item
                        +icon("footer_phone", "contact__svg")
                        p.contact__information (416) 555-0000
                    li.contact__item
                        +icon("footer_twitter", "contact__svg")
                        p.contact__information @escape
                    li.contact__item
                        +icon("footer_google", "contact__svg")
                        p.contact__information plus.com/escape
                ul.contact
                    li.contact__item
                        +icon("footer_message", "contact__svg")
                        p.contact__information hello@escape.com
                    li.contact__item
                        +icon("footer_facebook", "contact__svg")
                        p.contact__information facebook.com/escape
                    li.contact__item
                        +icon("footer_pinterest", "contact__svg")
                        p.contact__information pinterest.com/escape
        form(action="").form
            input.form__input.form__input-name(type='text', placeholder='Your Name*', required)
            input.form__input.form__input-email(type='email', placeholder='Your E-mail*', required)
            textarea.form__input.form__input-message(name="message", placeholder='Your Message', required)

